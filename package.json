{
  "name": "sveltefire",
  "version": "0.2.0",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codediodeio/sveltefire.git"
  },
  "main": "dist/sveltefire.js",
  "module": "dist/sveltefire.es.js",
  "scripts": {
    "build": "vite build && npm run build:types",
    "build:types": "svelte-type-generator",
    "prepublishOnly": "npm run build",
    "serve": "vite",
    "e2e": "cypress open --config watchForFileChanges=true",
    "emulate": "cd emulate && firebase emulators:start --only firestore",
    "test:watch": "concurrently \"npm:serve\" \"npm:emulate\" \"npm:e2e\" "
  },
  "files": [
    "README.md",
    "dist",
    "src"
  ],
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.34",
    "@testing-library/svelte": "^3.0.3",
    "concurrently": "^7.0.0",
    "cypress": "^9.2.1",
    "firebase-tools": "^10.0.1",
    "postcss": "^8.4.5",
    "postcss-load-config": "^3.1.1",
    "svelte": "^3.45.0",
    "svelte-hmr": "^0.14.9",
    "svelte-htm": "^1.1.1",
    "svelte-preprocess": "^4.10.1",
    "svelte-type-generator": "^1.1.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.10",
    "vite-web-test-runner-plugin": "^0.1.0"
  },
  "peerDependencies": {
    "firebase": "^9.0.0"
  },
  "keywords": [
    "svelte",
    "firebase",
    "javascript"
  ],
  "types": "dist/types",
  "svelte": "src/index.js"
}
